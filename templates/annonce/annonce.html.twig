{% extends "base.html.twig" %}


{% block title %} {{ad.title}}
{% endblock %}

{% block body %}
	<section class="container pt-5">
		<div class="row">
			<section class="col-lg-9 annonce-main-container">
				<div class="slider-container">
					{% for image in ad.image %}
						<figure class={% if loop.first %} "slider active" {% else %} "slider" {% endif %} style="background:url({{image.name}})"></figure>
					{% endfor %}
					<span class="next">&#x21a2;</span>
					<span class="prev">&#x21a3;</span>
				</div>
				<div class="slider-mini-container">
					{% for key,image in ad.image %}
						<figure data-number={{key}} class={% if loop.first %} "slider-mini activeMini" {% else %} "slider-mini" {% endif %}>
							<img src="{{image.name}}" alt="">
						</figure>
					</figure>
				{% endfor %}
			</div>

			{# Mansory #}
			<div class="" >
						               
			<article>
				<h3>Description</h3>
				<p> {{ad.description}}
				</p>
			</article>
		</section>
		<aside class="col-lg-3  annonce-info-container">
			<div class="user-info">
				<a class="" href="#">
					<figure>
						<img class="badge-user" src="/build/images/test.png" alt="">
						<figcaption class="">Sara Boudhan</figcaption>
					</figure>
				</a>
			</div>
			<div class="info-annonce">
				<article class="d-flex center-center">
					<h5>
						{% trans %}
						state
						{% endtrans %}
						:</h5>
					<p>{{ad.state}}</p>
				</article>

				<article class="d-flex center-center ">
					<h5>
						{% trans %}Price
						{% endtrans %}
						:
					</h5>
					<p>{{ad.price}}
						â‚¬</p>
				</article>
				<article class="d-flex center-center py-2">
					<h5>
						{% trans %}localization
						{% endtrans %}
						:</h5>
					<p>{{ad.city}}</p>
				</article>
				<article class="d-flex center-center ">
					<h5>
						{% trans %}gender{% endtrans %}
						:
					</h5>
					<p>{{ad.category.title}}</p>
				</article>
				<article class="d-flex center-center ">
					<h5>
						{% trans %}Category{% endtrans %}
						:
					</h5>
					<p>{{ad.subCategory.title}}</p>
				</article>

				<article class="d-flex center-center ">
					<h5>
						{% trans %}Color{% endtrans %}
						:
					</h5>
					<p>{{ad.color}}</p>
				</article>
				<article class="d-flex center-center">
					<h5>
						{% trans %}delivry{% endtrans %}
						:
					</h5>
					<p>{{ad.delivry}}</p>
				</article>

				{# {{dump(ad)}} #}
			</div>

			{% if  not app.user and is_granted('user') %}


				<form action="" class="d-flex flex-column contact">
					<textarea name="" id="" cols="30" rows="10">{% trans %}Bonjour, j'aimerais en savoir plus sur
						{% endtrans %}'{{ad.title}}'</textarea>
					<input class="btn-blue mt-2" type="submit" value="Envoyer">
				</form>
			{% elseif not is_granted('user') and not app.user %}
				<div class="user-not-c-a">
					<a class="btn-blue" href="{{path('home')}}">Contacter</a>
				</div>
			{% endif %}
		</aside>
		<div class="col-12">
			<div
				class="grid-auto">{# {% for item in items %}{% endfor %} #}
			</div>
		</div>
	</div>
</section>{% endblock %}{% block javascripts %} {{ parent() }} {{ encore_entry_script_tags('slider') }}{% endblock %}
