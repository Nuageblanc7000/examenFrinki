{% extends 'base.html.twig' %}

{% block title %}
Annonces - Frinki
{% endblock %}

{% block body %}
	{% include "partials/_filterForm.html.twig" %}
	<div class="container rela pt80">
		<div class="row rela vh100">
			<div class="grid-auto grid-center vh100">
				{% if annonces|length > 0 %}
					{% for annonce in annonces %}
						{% include "partials/_cards.html.twig" %}
					{% endfor %}
				{% else %}
					<div class="center">
						<div class="not-annonce">
							<h4>{% trans %}No result{% endtrans %}</h4>
							<figure>
								<img src="{{asset("/build/images/not-annonce.jpg")}}" alt="">
							</figure>
							<a class="btn-blue" href="{{path('annonces')}}">{% trans %}View all ads{% endtrans %}</a>
						</div>
					</div>
				{% endif %}
			</div>

			<div class="navigation"> 
			{{ knp_pagination_render(annonces) }}
			</div>
		</div>
		<div class="btnFilter">
			<i class='bx bx-filter-alt'></i>
		</div>
	</div>
{% endblock %}
{% block javascripts %} {{ parent() }} 
{{ encore_entry_script_tags('filter') }}
{% endblock %}
